    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/morning"
        android:id="@+id/morning_icon"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/day"
        android:id="@+id/day_icon"
        android:layout_marginStart="180dp"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/evening"
        android:id="@+id/evening_icon"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/night"
        android:id="@+id/night_icon"
        android:layout_marginStart="180dp"
        android:layout_marginTop="80dp"/>

    <TextView
        style="@style/TextStyle.dayTemp_item"
        android:id="@+id/day_temp"
        android:text="28"
        android:layout_below="@id/weekday_list_item"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="220dp"/>
    <TextView
        style="@style/TextStyle.day2Temp_item"
        android:id="@+id/eve_temp"
        android:text="28"
