        android:layout_below="@id/weekday_list_item"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="220dp" />

    <TextView
        style="@style/TextStyle.small_bold"
        android:text="week day"
        android:id="@+id/weekday_list_item"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/day_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"/>

    <TextView
        style="@style/TextStyle.dayTemp_item"
        android:id="@+id/morn_temp"
        android:text="28"
        android:layout_below="@id/weekday_list_item"
        android:layout_alignParentLeft="true"
